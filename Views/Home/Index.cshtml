@model IEnumerable<ManicureShop.Models.Product>
@{
    ViewData["Title"] = "Главная";
}
<h2>Популярные товары</h2>
<div class="products">
    @foreach(var p in Model)
    {
        <div class="product-card">
            <img src="@(p.ImagePath ?? "/images/no-image.png")" alt="@p.Name" width="150" />
            <h3>@p.Name</h3>
            <p>@p.Description</p>
            <p><strong>@p.Price.ToString("C")</strong></p>
            <form method="post" asp-controller="Cart" asp-action="AddToCart">
                <input type="hidden" name="productId" value="@p.Id" />
                <button type="submit">В корзину</button>
            </form>
            <a href="/Products/Details/@p.Id">Подробнее</a>
        </div>
    }
</div>
