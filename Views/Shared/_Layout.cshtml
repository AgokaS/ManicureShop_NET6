<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManicureShop</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container">
            <h1><a href="/" style="color: white; text-decoration: none;">ManicureShop</a></h1>
            <nav>
                <a href="/">Главная</a>
                <a href="/Products">Каталог</a>
                <a href="/Cart">Корзина</a>
                <a href="/Orders">Заказы</a>
                <a href="/Admin">Админ</a>
                
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <span style="margin-left: 20px; color: white;">
                        Привет, @User.Identity.Name!
                    </span>
                    <form method="post" action="/Identity/Account/Logout" style="display: inline; margin-left: 10px;">
                        @Html.AntiForgeryToken()
                        <button type="submit" style="background: transparent; border: 1px solid white; color: white; padding: 4px 8px; cursor: pointer;">Выход</button>
                    </form>
                }
                else
                {
                    <a href="/Identity/Account/Login" style="margin-left: 20px;">Войти</a>
                    <a href="/Identity/Account/Register">Регистрация</a>
                }
            </nav>
        </div>
    </header>

    <main role="main">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2025 - ManicureShop — учебный проект</p>
        </div>
    </footer>
</body>
</html>
